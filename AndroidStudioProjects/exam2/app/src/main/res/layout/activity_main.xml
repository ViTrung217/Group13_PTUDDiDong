<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    tools:context=".MainActivity">

    <!-- Trường nhập ID sản phẩm -->
    <EditText
        android:id="@+id/productId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ID sản phẩm"
        android:padding="10dp"
        android:background="@android:drawable/editbox_background"
        android:inputType="number" />


    <!-- Trường nhập tên sản phẩm -->
    <EditText
        android:id="@+id/productName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tên sản phẩm"
        android:padding="10dp"
        android:background="@android:drawable/editbox_background" />

    <!-- Trường nhập hãng sản phẩm -->
    <EditText
        android:id="@+id/productBrand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Hãng"
        android:padding="10dp"
        android:background="@android:drawable/editbox_background" />

    <!-- Trường nhập giá sản phẩm -->
    <EditText
        android:id="@+id/productPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Giá sản phẩm"
        android:padding="10dp"
        android:background="@android:drawable/editbox_background"
        android:inputType="numberDecimal" />

    <!-- Trường nhập số lượng tồn kho -->
    <EditText
        android:id="@+id/productStock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tồn kho"
        android:padding="10dp"
        android:background="@android:drawable/editbox_background"
        android:inputType="number" />

    <!-- Trường nhập ghi chú -->
    <EditText
        android:id="@+id/productDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ghi chú"
        android:padding="10dp"
        android:background="@android:drawable/editbox_background" />

    <!-- Các nút chức năng -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/btnInsert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thêm sản phẩm"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/btnShow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hiển thị sản phẩm"
            android:layout_marginEnd="8dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/btnUpdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cập nhật"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/btnDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xóa sản phẩm"/>

        <Button
            android:id="@+id/btnLogout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đăng xuất"/>
    </LinearLayout>

    <!-- Danh sách sản phẩm -->
    <ListView
        android:id="@+id/productListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>
