<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/signup_bg"
    tools:context=".activities.SignUpActivity">

    <TextView
        android:id="@+id/txt_return"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="⬅ Quay về màn hình đăng nhập"
        android:layout_marginTop="180dp"
        android:layout_marginLeft="20dp"
        android:textSize="15dp"
        android:textColor="@color/plum"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đăng Ký"
        android:textStyle="bold"
        android:textColor="@color/plum"
        android:textSize="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"/>
    <EditText
        android:id="@+id/edt_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/edttext_box"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:drawableLeft="@drawable/username"
        android:drawablePadding="10dp"
        android:paddingLeft="10dp"
        android:hint="  Nhập tên người dùng"
        android:textSize="15dp"
        android:textColor="@color/plum"/>

    <EditText
        android:id="@+id/edt_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/edttext_box"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:drawableLeft="@drawable/email"
        android:drawablePadding="10dp"
        android:paddingLeft="10dp"
        android:hint="  Nhập email"
        android:textSize="15dp"
        android:textColor="@color/plum"
        android:inputType="textEmailAddress"/>

    <EditText
        android:id="@+id/edt_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/edttext_box"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:drawableLeft="@drawable/pwd"
        android:drawablePadding="10dp"
        android:paddingLeft="10dp"
        android:hint="  Nhập mật khẩu"
        android:textSize="15dp"
        android:textColor="@color/plum"/>

    <AutoCompleteTextView
        android:id="@+id/auto_role"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/edttext_box"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:drawableLeft="@drawable/role"
        android:drawablePadding="10dp"
        android:paddingLeft="10dp"
        android:hint="  Chọn vai trò"
        android:textSize="15dp"
        android:textColor="@color/plum"
        android:dropDownHeight="wrap_content"/>


    <Button
        android:id="@+id/btn_signup"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:backgroundTint="@color/plum"
        android:textColor="@color/white"
        android:text="Đăng ký"
        android:textSize="15dp"
        android:textStyle="bold"/>



</LinearLayout>